<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding_parent"
        tools:context=".activities.callflow.MissedCallActivityOld">

        <include
            android:id="@+id/toolbar_missed_call"
            layout="@layout/layout_toolbar_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_container_padding" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_missed_calls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_missed_call"
            android:layout_marginHorizontal="@dimen/screen_container_padding"
            android:layout_marginTop="@dimen/rv_margin_top"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/row_item_missed_call_layout" />

        <TextView
            android:id="@+id/nodata_missed_call"
            style="@style/text_title_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="@dimen/card_padding"
            android:text="@string/no_data_found"
            android:textAppearance="@style/caption"
            android:textColor="@null"
            android:visibility="gone" />
        <include
            android:id="@+id/layout_loader"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/load_more_progressbar" />
      <!--  <ProgressBar
            android:id="@+id/progressBar_missed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />-->
    </RelativeLayout>
</layout>