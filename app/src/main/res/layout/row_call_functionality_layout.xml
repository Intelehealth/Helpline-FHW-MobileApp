<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_missed_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/screen_padding"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_8"
        android:layout_marginHorizontal="@dimen/margin_5"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/list_container_padding"
            android:layout_marginHorizontal="@dimen/list_container_padding"
            android:padding="@dimen/screen_container_padding">

            <TextView
                android:id="@+id/tv_patient_name_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_call_info"
                android:gravity="center_vertical"
                android:hint="Name"
                style="@style/text_title_style"
                app:layout_constraintBottom_toBottomOf="@+id/parent"
                app:layout_constraintStart_toEndOf="@+id/parent"
               />

            <TextView
                android:id="@+id/tv_date_time_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_call_datetime"
                android:hint="Date Time"
                style="@style/TextviewInputTitleStyle"
                app:layout_constraintBottom_toBottomOf="@+id/iv_call_whatsapp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/tv_patient_name_call"
                app:drawableStartCompat="@drawable/custom_calendar_start" />

            <ImageView
                android:id="@+id/iv_call_whatsapp"
                android:layout_width="@dimen/iv_row_call_icons"
                android:layout_height="@dimen/iv_row_call_icons"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_patient_name_call"
                app:srcCompat="@drawable/ui2_ic_play_audio"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
