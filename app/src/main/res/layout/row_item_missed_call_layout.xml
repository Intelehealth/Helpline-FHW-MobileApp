<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_missed_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_row_items_margin"
        android:layout_marginTop="@dimen/list_row_items_margin"
        android:layout_marginEnd="@dimen/list_row_items_margin"
        android:layout_marginBottom="@dimen/margin_start_call_info"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/list_container_padding"
            android:padding="@dimen/row_item_container_padding">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/iv_row_call_icons"
                android:layout_height="@dimen/iv_row_call_icons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/red_missed_call" />

            <TextView
                android:id="@+id/tv_patient_name_call"
                style="@style/text_title_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_call_info"
                android:gravity="center_vertical"
                android:hint="Name"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <TextView
                android:id="@+id/tv_type_of_call_recording"
                style="@style/TextviewInputTitleStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_call_info"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:hint="Call type"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/tv_patient_name_call" />

            <TextView
                android:id="@+id/tv_date_time_call"
                style="@style/TextviewInputTitleStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_call_datetime"
                android:hint="Date Time"
                app:drawableStartCompat="@drawable/custom_calendar_start"
                app:layout_constraintBottom_toBottomOf="@+id/iv_call_whatsapp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/tv_type_of_call_recording" />

            <ImageView
                android:id="@+id/iv_call_whatsapp"
                android:layout_width="@dimen/iv_row_call_icons"
                android:layout_height="@dimen/iv_row_call_icons"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_type_of_call_recording"
                app:srcCompat="@drawable/ui2_ic_icon_whatsapp_active" />

            <ImageView
                android:id="@+id/iv_call_missed_call"
                android:layout_width="@dimen/iv_row_call_icons"
                android:layout_height="@dimen/iv_row_call_icons"
                android:layout_marginEnd="@dimen/call_icons_margin_end"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@+id/iv_call_whatsapp"
                app:layout_constraintEnd_toStartOf="@+id/iv_call_whatsapp"
                app:layout_constraintTop_toBottomOf="@+id/tv_type_of_call_recording"
                app:srcCompat="@drawable/ui2_ic_icon_call" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
