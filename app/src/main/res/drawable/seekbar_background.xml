<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <size android:height="@dimen/seekbar_height" />
            <corners android:radius="20dp" />
            <gradient
                android:angle="90"
                android:centerColor="@color/grey_button_bg"
                android:centerY="0.2"
                android:endColor="@color/grey_button_bg"
                android:startColor="@color/grey_button_bg"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
